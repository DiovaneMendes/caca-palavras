import java.util.Random;

public class Cruzamento {
	String palavra[] = new String[12];
	char matriz[][] = new char [30][80];
	
	public Cruzamento(){
		
	}
	
	//=========================================================================
	//INSERINDO PALAVRAS E BOTANDO NAS POSICOES NA MATRIZ		
	public void insertPalavra(){
		definiPalavra();
		
		for(int i=0; i<12; i++){
			int apoio = palavra[i].length();
			char modifica[] = palavra[i].toCharArray();
			if(i == 11){
				apoio = 7;				
			}
			
			for(int j=0; j<apoio-1; j++){
				switch(i){
					//===============================================================
					//DIOVANE
					case 0: matriz[10+j][29] = modifica[j];
					break;
					//===============================================================
					//ESTAGIO
					case 1: matriz[11][24+j] = modifica[j];
					break;
					//===============================================================
					//ALGORTIMO
					case 2: matriz[9-j][47+j] = modifica[j];
					break;
					//===============================================================
					//PROGRAMACAO
					case 3: matriz[14][34-j] = modifica[j];
					break;
					//===============================================================
					//INFELICIDADE
					case 4: matriz[23][3+j] = modifica[j];
					break;
					//===============================================================
					//ERRADO
					case 5: matriz[27-j][11] = modifica[j];
					break;
					//===============================================================
					//DEPRESSAO
					case 6: matriz[2+j][48+j] = modifica[j];
					break;
					//===============================================================
					//CRUZAMENTO
					case 7: matriz[27-j][68-j] = modifica[j];
					break;
					//===============================================================
					//ANALISE
					case 8: matriz[25-j][62+j] = modifica[j];
					break;
					//===============================================================
					//SISTEMA
					case 9: matriz[16+j][63-j] = modifica[j];
					break;
					//===============================================================
					//LEITURA
					case 10: matriz[6][9+j] = modifica[j];
					break;
					//===============================================================
					//FUTURO
					case 11: matriz[3+j][10+j] = modifica[j];
					break;
				}
			}
		}
	}
	
	//========================================================================
	// BOTANDO LETRAS ALEATÓRIAS
	public void letrasAleatorias(){
		Random gerador = new Random();
		char alfabeto[] = "abcdefghijklmnopqrstuvxwyz".toCharArray();
		char oi[] = new char[1];
		
		for(int i=0; i<30; i++){
			for(int j=0; j<80; j++){
				if(matriz[i][j] == oi[0]){
					matriz[i][j] = '-';//alfabeto[gerador.nextInt(26)];
				}
				System.out.print(matriz[i][j]);
				if(j == 79){
					System.out.println();
				}
			}
		}
	}
	//========================================================================
	//MOSTRANDO SOLUCAO
	public void solucao(){
		char oi[] = new char[1];
		
		for(int i=0; i<30; i++){
			for(int j=0; j<80; j++){
				if(matriz[i][j] == oi[0]){
					matriz[i][j] = '-';
				}
				System.out.print(matriz[i][j]);
				if(j == 79){
					System.out.println();
				}
			}
		}
	}
	
	//========================================================================
	//PUXANDO PALAVRAS DA LEITURA DE ARQUIVO 	
	public void definiPalavra(){
		LeituraDeArquivo leitura = new LeituraDeArquivo();
		leitura.lendoArquivo();
		for(int i=0; i<12; i++){
			palavra[i] = leitura.palavra[i];
		}
	}
}
